<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javafx0.HelloController" style="-fx-background-color: #87CEEB;">


    <!-- Your existing content -->
    <VBox spacing="10" alignment="CENTER">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <children>
            <Label text="Welcome to the Attendance System" style="-fx-font-size: 24px;"/>

            <HBox spacing="10">
                <Button fx:id="teacherLoginButton" text="Teacher Login"          onAction="#showTeacherLoginScreen"/>
                <Button                            text="Feedback for Teacher"   onAction="#showFeedbackScreen"/>
            </HBox>
        </children>
    </VBox>
</StackPane>
